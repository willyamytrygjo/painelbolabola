-- Painel Bolabola - Daneli KSX Style com Modules Loader
print("Painel Bolabola KSX-style iniciando... Procurando pasta modules")

-- Simula estrutura KSX no topo (sem bit32 pra não quebrar no Xeno)
local vb = 12345  -- valor fake pra loop
while vb ~= 66693 do
    vb = 66693  -- sai do loop fake
end

-- Função pra carregar módulo da pasta modules (via readfile se local, ou HttpGet se online)
local function loadModule(name)
    local success, module = pcall(function()
        -- Tenta readfile (se executor permitir acesso a arquivos locais)
        return loadstring(readfile("modules/" .. name .. ".lua"))()
    end)
    if not success then
        -- Fallback: HttpGet do GitHub raw
        local url = "https://raw.githubusercontent.com/willyamytrygjo/painelbolabola/main/modules/" .. name .. ".lua"
        success, module = pcall(function()
            return loadstring(game:HttpGet(url))()
        end)
    end
    if success then
        print("Módulo carregado: " .. name)
        return module
    else
        warn("Falha ao carregar módulo " .. name .. ": " .. tostring(module))
        return {}
    end
end

-- Carrega módulos comuns (adicione nomes reais dos seus arquivos .lua na pasta modules)
local modules = {
    fly = loadModule("fly"),
    noclip = loadModule("noclip"),
    speed = loadModule("speed"),
    infjump = loadModule("infjump"),
    esp = loadModule("esp"),
    troll = loadModule("troll")  -- ex: bang/fling
    -- Adicione mais conforme os arquivos que você tem na pasta
}

-- GUI Principal
local sg = Instance.new("ScreenGui")
sg.Name = "PainelBolabola"
sg.Parent = game.CoreGui
sg.ResetOnSpawn = false

local frame = Instance.new("Frame", sg)
frame.Size = UDim2.new(0, 550, 0, 500)
frame.Position = UDim2.new(0.5, -275, 0.5, -250)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
frame.Active = true
frame.Draggable = true

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 60)
title.BackgroundColor3 = Color3.fromRGB(255, 60, 100)
title.Text = "Painel Bolabola - Daneli"
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBlack
title.TextSize = 32

local wm = Instance.new("TextLabel", frame)
wm.Size = UDim2.new(0, 280, 0, 30)
wm.Position = UDim2.new(1, -290, 1, -35)
wm.BackgroundTransparency = 0.6
wm.Text = "Daneli | Paranatinga - MT | Modules Loaded"
wm.TextColor3 = Color3.fromRGB(100, 255, 200)
wm.Font = Enum.Font.Arcade
wm.TextSize = 16

local scroll = Instance.new("ScrollingFrame", frame)
scroll.Size = UDim2.new(1, -20, 1, -80)
scroll.Position = UDim2.new(0, 10, 0, 70)
scroll.BackgroundTransparency = 1
scroll.CanvasSize = UDim2.new(0, 0, 0, 1000)

local list = Instance.new("UIListLayout", scroll)
list.Padding = UDim.new(0, 12)
list.HorizontalAlignment = Enum.HorizontalAlignment.Center

local function btn(text, func)
    local b = Instance.new("TextButton", scroll)
    b.Size = UDim2.new(0.9, 0, 0, 60)
    b.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    b.Text = text
    b.TextColor3 = Color3.new(1,1,1)
    b.Font = Enum.Font.GothamBold
    b.TextSize = 22
    b.MouseButton1Click:Connect(func)
end

-- Botões usando módulos carregados
btn("Fly (de modules/fly)", function()
    if modules.fly and modules.fly.toggle then
        modules.fly.toggle()
    else
        print("Módulo fly não encontrado ou sem toggle")
    end
end)

btn("Noclip (de modules/noclip)", function()
    if modules.noclip and modules.noclip.toggle then
        modules.noclip.toggle()
    end
end)

btn("Speed Hack (de modules/speed)", function()
    if modules.speed and modules.speed.activate then
        modules.speed.activate(64)  -- exemplo: speed 64
    end
end)

btn("Infinite Jump (de modules/infjump)", function()
    if modules.infjump and modules.infjump.enable then
        modules.infjump.enable()
    end
end)

btn("ESP (de modules/esp)", function()
    if modules.esp and modules.esp.toggle then
        modules.esp.toggle()
    end
end)

btn("Troll Bang (de modules/troll)", function()
    if modules.troll and modules.troll.bang then
        modules.troll.bang()
    end
end)

print("Painel Bolabola KSX-style com módulos carregados!")
